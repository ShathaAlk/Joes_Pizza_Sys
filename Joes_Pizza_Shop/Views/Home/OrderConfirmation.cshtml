

@{
    Layout = null;

}
@{

    List<CustomerOrderTable> COT = ViewData["Orders Details"] as List<CustomerOrderTable>;
    Order ord = ViewData["Order"] as Order;
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>The Order Confirmation</title>

    <!-- Bootstrap core CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <link href="~/assets/css/style.css" rel="stylesheet">




    <style>
        body {
            background-image: url("../../assets/images/bg.jpg");
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: cover;
            background-position: center top;
        }

        .container {
            background-color: rgba(255, 255, 255, 0.9);
        }

        .row {
            justify-content: center !important;
        }

        h6, h5 {
            font-weight: 600;
            color: rgba(235, 114, 57, 0.5);
            border-bottom: .25rem solid transparent;
        }

        label {
            color: rgba(235, 114, 57, 0.5);
            border-bottom: .25rem solid transparent;
            font-size: 1em;
        }
    </style>

</head>

<body>


    <div class="container text-center">
        <main style="height: 100%;">
            <div class="py-3">
                <h1 class="fw-light">Order Confirmation</h1>
            </div>
            <img style="width: 100px;" src="../../assets/images/checked.png" />

            <div class="py-4">
                <h6 style="color:black; font-size:20px">Order No. @ord.OrderID</h6>
            </div>
            <div class="row">
                <div class="col-md-7 col-lg-6">
                    <div class="rowClass row mb-5 text-center" style="border-bottom: 0.5px solid black; margin-bottom:-20px">
                        @*<div class="col-1 themed-grid-col text-muted"></div>*@
                        <div class="col-4 themed-grid-col text-muted"><h6>Item Name</h6></div>
                        <div class="col-4 themed-grid-col text-muted"><h6>Quantity</h6></div>
                        <div class="col-4 themed-grid-col text-muted"><h6>Total Price</h6></div>
                    </div>

                    <div class="OrderDiv">
                        @foreach (var item in COT)
                        {
                            <div class="rowClass row mb-3 text-center" style="margin-top:-1em">

                                <div class="col-4 themed-grid-col text-muted">
                                    <h6 class="my-0">@item.PizzaItem.PizzaName</h6>
                                    <br />
                                </div>
                                @*<div class="col-2 themed-grid-col text-muted"><span class="text-muted price">$@item.Price</span></div>*@
                                <div class="col-4 themed-grid-col text-muted">
                                    <span class="text-muted Quantity">@item.Quantity</span>
                                </div>
                                <div class="col-4 themed-grid-col text-muted"><span class="text-muted Total">$@item.TotalPricePerItem</span></div>
                            </div>
                        }
                        <br />

                        <div class="rowClass row mb-2">
                            @*<div class="col-9 themed-grid-col text-muted text-start"><h6>Total Price</h6></div>*@
                            <div class="col-10 themed-grid-col text-muted text-start">
                                <strong style="color:black; font-size:20px">Total Price. $@ord.TotalAmount</strong>
                            </div>
                        </div>
                        <br />
                        <div class="rowClass row mb-2">
                            <div class="col-4 themed-grid-col">
                                <h6 style="color:black">Order Date. @ord.OrderDate </h6>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </main>
        <br />
    </div>

    <footer class="my-5 pt-5 text-muted text-center text-small">
        <p class="mb-1">&copy; 2021 Joe’s Pizza</p>

    </footer>



</body>

</html>